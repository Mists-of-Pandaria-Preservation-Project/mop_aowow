name: Sync Fork's Upstream Branch with Upstream's Main/Master Branch
on:
  schedule:
    - cron: '0 6 * * *'  # 6 AM UTC
  workflow_dispatch: { }
jobs:
  sync:
    runs-on: ubuntu-latest
    permissions:
      contents: write
    steps:
      - run: gh repo sync $REPOSITORY -b upstream
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
          REPOSITORY: ${{ github.repository }}
